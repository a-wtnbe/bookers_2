<%= render 'books/new', books: @books %>

<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
 <% end %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :opinion %>
 <%= f.submit 'Update Book' %>
 <% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>

<footer>
  <p>CopyRight Infratop.inc</p>
</footer>