<!DOCTYPE html>
<html>
  <head
    <meta charset="UTF-8" />
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
         <div class="container">
           <a class="navbar-brand" href="/"><span><i class="fas fa-book"></i>Bookers</span></a>
           <div class="navbar-collapse collapse show" >
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li><%= link_to "Home", user_path(current_user.id), class: "fas fa-home" %></li>
                  <li><%= link_to "Users", users_path, class: "fas fa-users" %></li>
                  <li><%= link_to "Books", books_path, class: "fas fa-book" %></li>
                  <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt" %></li>
                <% else %>
                  <li><%= link_to "Home", root_path, class: "fas fa-home" %></li>
                  <li><%= link_to "About", home_about_path, class: "fas fa-link" %></li>
                  <li><%= link_to "sign up", new_user_registration_path, class: "fas fa-user-plus" %></li>
                  <li><%= link_to "login", new_user_session_path, class: "fas fa-sign-in-alt"%></li>
                <% end %>
              </ul>
           </div>
         </div>
      </nav>
    </header>

   <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
   <% end %>
</body>

  <%= yield %>
  </body>
</html>
